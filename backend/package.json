{
    "name": "studybuddy-backend",
    "version": "1.0.0",
    "description": "StudyBuddy backend with Firebase",
    "main": "index.js",
    "scripts": {
        "dev": "npx ts-node src/server.ts",
        "build": "npx tsc",
        "start": "node dist/server.js",
        "deploy:rules": "firebase deploy --only firestore:rules",
        "deploy:indexes": "firebase deploy --only firestore:indexes",
        "deploy:storage": "firebase deploy --only storage",
        "deploy:all": "firebase deploy --only firestore,storage",
        "firebase:dev": "firebase emulators:start"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.873.0",
        "@types/multer": "^2.0.0",
        "firebase-admin": "^11.10.1",
        "firebase-functions": "^4.5.0",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.5"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.3.0",
        "@types/nodemailer": "^7.0.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "firebase-tools": "^12.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}
